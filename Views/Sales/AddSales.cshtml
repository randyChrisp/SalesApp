@model Sales
@{
    ViewBag.Title = "Add Sales";
}
@section headers { <h2 class="mt-2 mb-2">@ViewBag.Title</h2>}
@section Scripts
{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<form asp-action="AddSales" method="post">
    <div class="row form-group">
        <label asp-for="Quarter" class="col-sm-2 col-form-label">Quarter:</label>
        <div class="col-sm-4">
            <input asp-for="Quarter" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Quarter" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <label asp-for="Year" class="col-sm-2 col-form-label">Year:</label>
        <div class="col-sm-4">
            <input asp-for="Year" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <label asp-for="Amount" class="col-sm-2 col-form-label">Amount:</label>
        <div class="col-sm-4">
            <input asp-for="Amount" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <label asp-for="EmployeeId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <select asp-for="EmployeeId" class="form-control" asp-items="@(new SelectList(ViewBag.Employees, "EmployeeId", "FullName"))">
                <option value="0"></option>
            </select>
        </div>
        <div class="col">
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <button type="submit" class="btn btn-dark">Add</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">Cancel</a>
        </div>
    </div>
</form>
